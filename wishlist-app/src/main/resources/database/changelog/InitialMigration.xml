<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <!-- Создание таблицы users -->
    <changeSet author="dashbah" id="create-table-users">
        <createTable tableName="users">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="username" type="VARCHAR(100)"/>
            <column name="password" type="VARCHAR(32)"/>
            <column name="role" type="VARCHAR(16)"/>
        </createTable>
    </changeSet>

    <!-- Создание таблицы gifts -->
    <changeSet author="dashbah" id="create-table-gifts">
        <createTable tableName="gift">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="gift_uid" type="varchar(16)"/>
            <column name="title" type="varchar(250)"/>
            <column name="description" type="varchar(1024)"/>
            <column name="price" type="double"/>
            <column name="url" type="varchar(250)"/>
            <column name="user_id" type="bigint"/>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="gift"
                baseColumnNames="user_id"
                constraintName="fk_gift_user"
                referencedTableName="user"
                referencedColumnNames="id"
                onDelete="CASCADE"/>
    </changeSet>

</databaseChangeLog>